{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "@uni-helper/uni-app-types", "@vue-macros/reactivity-transform/macros-global"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "./auto-imports.d.ts"],
  "exclude": ["dist", "node_modules"],

  "vueCompilerOptions": {
    "nativeTags": ["block", "component", "template", "slot"]
  }
}
